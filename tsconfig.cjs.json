{
  "compilerOptions": {
    "target": "ES2019",
    "lib": ["ES2019"],
    "module": "CommonJS",
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./dist/cjs",
    "sourceMap": false,
    "outDir": "./dist/cjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "*.spec.ts"],
  "include": ["./src/**/*.ts"]
}
